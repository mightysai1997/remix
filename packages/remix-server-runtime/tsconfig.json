{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "target": "ES2019",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../build/node_modules/@remix-run/server-runtime/dist",
    "composite": true,

    "paths": {
      "@remix-run/router": ["./router/index.ts"]
    },

    "skipLibCheck": true
  }
}
